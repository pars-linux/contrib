    <Package>
        <Name>xfdesktop</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.4.1">libxfce4util</Dependency>
            <Dependency versionFrom="4.4.1">libxfcegui4</Dependency>
            <Dependency versionFrom="4.4.1">libxfce4mcs</Dependency>
