# This is a simple script to start compiz-manager automatically
# in accordance with the desktop environment.

import os,sys
from subprocess import call

# Autostart desktop file
desktop_file = ('''[Desktop Entry]
Encoding=UTF-8
Exec=fusion-icon --no-start
Type=Application
X-KDE-autostart-after=kdesktop

Name=Fusion-icon
''')

COMPIZ = '/usr/bin/compiz-manager'

def user():
    return unicode(os.getenv('USER'))

def desktopSession():
    return unicode(os.getenv("DESKTOP_SESSION"))

def kdeSessionVersion():
    return unicode(os.getenv("KDE_SESSION_VERSION"))

def kdeVersion():
    if kdeSessionVersion() == 4:
        VERSION = 4

    else:
        if desktopSession() in ('default', 'kde'):
            VERSION = 3.5

    return VERSION

def kWin():
    if kdeVersion():
        KWIN = '/usr/kde%s/bin/kwin --replace' % kdeVersion()
    else:
        KWIN = None

    return KWIN

def kdePath(kde_version):
    path = os.path.join('/home', user(), '.kde%s/Autostart' % kde_version)
    if not os.path.exists(path):
        os.mkdir(path)

    return path

def desktopKdePath():
    return os.path.join(kdePath(kdeVersion()), 'fusion-icon-auto-start.desktop')

def directRendering():
    cmd = os.popen('glxinfo | grep -i "direct rendering"')
    direct_rendering = cmd.read().strip().split(":")[-1]
    cmd.close()

    return direct_rendering

def writeDesktopFile(path):
    _file = file(os.path.join(path), 'w')
    _file.write(desktop_file)
    _file.close()

def main():
    if directRendering() == ' Yes' and kWin() != None:
        writeDesktopFile(desktopKdePath())

        # Everything is fine so far and we are ready to power up...
        call(COMPIZ)

    else:
        if os.path.exists(desktopKdePath()):
            os.remove(desktopKdePath())

        call(kWin())

        print 'Direct rendering is not suppported.\nCompiz-manager is not started...'
        sys.exit()

if __name__ == '__main__':
    import sys
    sys.exit(main())
