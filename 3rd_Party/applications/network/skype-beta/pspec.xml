<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM 'http://www.pardus.org.tr/projeler/pisi/pisi-spec.dtd'>
<PISI>
    <Source>
        <Name>skype-beta</Name>
        <Homepage>http://www.skype.com</Homepage>
        <Packager>
            <Name>Ali Erdinç Köroğlu</Name>
            <Email>erdinc@pardus.org.tr</Email>
        </Packager>
        <License>skype-eula</License>
        <IsA>app:gui</IsA>
        <Summary>Skype is a P2P-VoiceIP client.</Summary>
        <Description>Skype is a P2P-VoiceIP client.</Description>
        <Summary xml:lang="tr">Skype P2P VoIP istemcisi</Summary>
        <Description xml:lang="tr">Skype, kullanıcıdan kullanıcıya internet telefonu servisi veren istemci. Ticari bir ürün olmasına karşın skype kullanıcıları arasında ücretsiz olarak internet üzerinden konuşmanıza imkan vermektedir.</Description>
        <Archive sha1sum="2a542cda91f89eb8a032ee86ea8d17c84511fac3" type="tarbz2">http://download.skype.com/linux/skype-beta-1.3.0.30.tar.bz2</Archive>
    </Source>

    <Package>
        <Name>skype-beta</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="0.23.4">dbus</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="config">/etc</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/opt/skype</Path>
            <Path fileType="data">/usr/kde/3.5/share/icons</Path>
            <Path fileType="data">/usr/share/applications</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0755" target="/opt/skype/skype.sh">skype.sh</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/etc/dbus-1/system.d/skype.conf">skype.debus.config</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="package.py">System.Package</COMAR>
        </Provides>
    </Package>

    <History>
        <Update release="1">
            <Date>2006-07-03</Date>
            <Version>1.3.0.30</Version>
            <Comment>First skype release with alsa support</Comment>
            <Name>Ali Erdinç Köroğlu</Name>
            <Email>erdinc@pardus.org.tr</Email>
        </Update>
    </History>
</PISI>
