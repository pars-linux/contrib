        <BuildDependencies>
            <Dependency>xfconf-devel</Dependency>
            <Dependency>libnotify</Dependency>
            <Dependency>xcb-util</Dependency>
            <Dependency>gst-plugins-base</Dependency>
            <Dependency>gstreamer</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">desktop.patch</Patch>
        </Patches>
    </Source>

