    <Package>
        <Name>xfce4-settings</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.6.0">libxfcegui4</Dependency>
            <Dependency versionFrom="0.3.100">exo</Dependency>
            <Dependency>libXi</Dependency>
            <Dependency>libXrandr</Dependency>
            <Dependency>libXcursor</Dependency>
