    <Source>
        <Name>deveditor</Name>
        <Homepage>http://code.google.com/p/deveditor</Homepage>
        <Packager>
            <Name>Cihan Okyay</Name>
            <Email>okyaycihan@gmail.com</Email>
        </Packager>
        <License>GPLv2</License>
        <IsA>app:gui</IsA>
        <Summary>Experimental programmer's editor.</Summary>
        <Description>The goal is to create an editor that could be used by a person (most likely a student) with no a priori knowledge of programming. This aims to be a classic "write code, click run" IDE.</Description>
        <Archive sha1sum="cf6d3c33c17188c1549ff40e2e40527916f3a13b" type="tarbz2">http://deveditor.googlecode.com/files/peditor-0.3.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>qt-devel</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>deveditor</Name>
        <RuntimeDependencies>
            <Dependency>qt</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/share</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/applications/deveditor.desktop">deveditor.desktop</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/pixmaps/deveditor.png">deveditor.png</AdditionalFile>
        </AdditionalFiles>
    </Package>

