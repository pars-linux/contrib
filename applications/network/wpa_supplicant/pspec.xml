        <AdditionalFiles>
            <AdditionalFile target="/etc/conf.d/wpa_supplicant" permission="0644" owner="root">wpa_supplicant.confd</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="link-wpa.py">Net.Link</COMAR>
            <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

