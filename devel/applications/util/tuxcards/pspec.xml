        </BuildDependencies>
        <Patches>
            <Patch>tuxcards-gcc43.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>tuxcards</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="3.1.1">qt</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="doc">/usr/share/doc</Path>
