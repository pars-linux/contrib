        <License>GPLv2</License>
        <Icon>wicd-client</Icon>
        <IsA>service</IsA>
        <Summary>A lightweight wired and wireless network service</Summary>
        <Description>Wicd is a daemon that manages wired and wireless connections.</Description>
        <Archive sha1sum="7c180d85a50bdbfc208214c94cfaa793bbc7d0f6" type="tarbz2">mirrors://sourceforge/wicd/wicd-1.6.2.tar.bz2</Archive>
        <Patches>
            <Patch level="1">desktop.patch</Patch>
            <Patch level="1">add-policykit-support.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>wicd</Name>
        <RuntimeDependencies>
            <Dependency>pm-utils</Dependency>
            <Dependency>wpa_supplicant</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc</Path>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/var/lib</Path>
            <Path fileType="data">/usr/share/wicd</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/lib/python2.6/site-packages/wicd/startservice.py">startservice.py</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>wicd-client</Name>
        <IsA>app:gui</IsA>
        <Summary>Wicd's user interface client that is written in GTK+</Summary>
        <RuntimeDependencies>
            <Dependency releaseFrom="7">wicd</Dependency>
            <Dependency>pygtk</Dependency>
            <Dependency>notify-python</Dependency>
            <Dependency>gksu</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package releaseTo="4">wicd</Package>
        </Replaces>
        <Files>
            <Path fileType="config">/etc/xdg</Path>
            <Path fileType="executable">/usr/bin/wicd-client</Path>
            <Path fileType="library">/usr/lib/wicd/wicd-client.py</Path>
            <Path fileType="data">/usr/share/icons</Path>
            <Path fileType="data">/usr/share/pixmaps</Path>
            <Path fileType="data">/usr/share/applications</Path>
            <Path fileType="data">/usr/share/wicd/wicd.glade</Path>
            <Path fileType="man">/usr/share/man/man1/wicd-client.1</Path>
        </Files>
    </Package>

    <Package>
        <Name>wicd-curses</Name>
        <IsA>app:console</IsA>
        <Summary>Wicd's user interface client that is written in Urwid</Summary>
        <RuntimeDependencies>
            <Dependency releaseFrom="7">wicd</Dependency>
            <Dependency>urwid</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin/wicd-curses</Path>
            <Path fileType="library">/usr/lib/wicd/*curses.py</Path>
            <Path fileType="library">/usr/lib/wicd/curses_misc.py</Path>
            <Path fileType="man">/usr/share/man/man8/wicd-curses.8</Path>
        </Files>
    </Package>

