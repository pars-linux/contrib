            <Patch level="1">xfce-utils-4.5.92-fix-desktop-entry.patch</Patch>
            <Patch>startxfce4.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>xfce-utils</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.6.0">libxfcegui4</Dependency>
            <!-- for xflock4 -->
            <Dependency>xscreensaver</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="executable">/usr/libexec</Path>
            <Path fileType="config">/etc</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="doc">/usr/share/xfce4/doc</Path>
            <Path fileType="data">/usr/share</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile target="/etc/X11/Sessions/xfce4" permission="0755" owner="root">xfce4</AdditionalFile>
            <AdditionalFile target="/usr/share/xsessions/xfce4.desktop" permission="0644" owner="root">xfce4.desktop</AdditionalFile>
        </AdditionalFiles>
    </Package>

